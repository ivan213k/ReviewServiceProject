@page "/reviewTemplates";
<Header Value="Review Templates"></Header>
@if (reviewTemplates is null)
{
    <Loading />
}
else
{
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered m-2">
                <thead>
                    <tr>
                        <th scope="col" class="table-light">Name</th>
                        <th scope="col" class="table-light">Areas</th>
                        <th>Actions</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reviewTemplate in reviewTemplates)
                    {
                        <tr>
                            <td>@reviewTemplate.Name</td>
                            <td>@reviewTemplate.Areas.Count</td>
                            <td><a href="/editReviewTemplate/@reviewTemplate.Id" class="oi text-center">Edit</a></td>
                            <td><button @onclick="() => OnDeleteClicked(reviewTemplate)" class="btn-danger">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <Footer IsSecondaryButtonVisible="false" PrimaryButtonText="Add new template" OnPrimaryButtonClicked="@OnAddReviewTemlateClicked"></Footer>
    <DeleteConfirmation @ref="@deleteConfirmationDialog" OnPrimaryButtonClicked="DeleteReviewTemplate"></DeleteConfirmation>
}
