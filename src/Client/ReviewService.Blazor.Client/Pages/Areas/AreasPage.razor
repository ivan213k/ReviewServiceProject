@page "/areas";
<Header Value="Areas"></Header>
@if (areas is null)
{
    <Loading />
}
else
{
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered m-2">
                <thead>
                    <tr>
                        <th scope="col" class="table-light">Name</th>
                        <th scope="col" class="table-light">Area items</th>
                        <th>Actions</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var area in areas)
                    {
                    <tr>
                        <td>@area.Name</td>
                        <td>@area.AreaItems.Count</td>
                        <td><a href="#" class="oi text-center">Edit</a></td>
                        <td><button @onclick="() => OnDeleteClicked(area)" class="btn-danger">Delete</button></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <Footer IsSecondaryButtonVisible="false" PrimaryButtonText="Add new area" OnPrimaryButtonClicked="@OnAddNewAreaClicked"></Footer>
    <DeleteConfirmation @ref="@deleteConfirmationDialog" OnPrimaryButtonClicked="DeleteArea"></DeleteConfirmation>
}

