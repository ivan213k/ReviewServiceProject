@page "/areas";
@if (areas is null)
{
    <Loading />
}
else
{
    <MudTable Items="@areas" Breakpoint="Breakpoint.None" Hover="true" Class="px-4 mt-8 ml-8 mr-8" Elevation="14">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Area items</MudTh>
            <MudTh>Action</MudTh>
            <MudTh>Action</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Area items">@context.AreaItems.Count</MudTd>
            <MudTd DataLabel="Action">
                <MudButton Variant="Variant.Text" OnClick="()=> OnEditClicked(context.Id)">Edit</MudButton>
            </MudTd>
            <MudTd DataLabel="Action">
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Error" OnClick="() => OnDeleteClicked(context)" Class="ml-auto">Delete</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>

    @*<Footer IsSecondaryButtonVisible="false" PrimaryButtonText="Add new area" OnPrimaryButtonClicked="@OnAddNewAreaClicked"></Footer>*@
}

