@page "/addArea";
<Header Value="Areas add"></Header>
<div class="content">
    <EditForm Model="@area">
        <div class="row text-center">
            <div class="col-md-5">
                <label class="float-left" for="inputName">Name: </label>
                <InputText @bind-Value="@area.Name" id="inputName" class="form-control" placeholder="area name"></InputText>
            </div>
            <div class="col-md-5">
                <label class="float-left" for="inputDescription">Description: </label>
                <InputTextArea @bind-Value="@area.Description" id="inputDescription" class="form-control" placeholder="area description"></InputTextArea>
            </div>
        </div>
        <br />
    </EditForm>
    <div class="row">
        <div class="col-md-5">
            <h3 class="float-left">Area items: </h3>
        </div>
        <div class="col-md-5">
            <button class="btn-primary float-right">Add Row</button>
        </div>
    </div>
    <table class="table table-bordered m-2">
        <thead>
            <tr>
                <th scope="col" class="table-light">Name</th>         
            </tr>
        </thead>
        <tbody>
            @foreach (var areaItem in area.AreaItems)
            {
                <tr>
                    <td>@areaItem.Name</td>
                    <td><a href="#" class="oi oi-trash text-center"> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<Footer></Footer>

