@page "/reviewpage/{ReviewEvaluationGuid:guid}";
@if (reviewEvaluation is null)
{
    <Loading></Loading>
}
else
{
    <MudPaper Style="position:relative" Height="450px" Class="px-4 mt-8 ml-8 mr-8" Elevation="14">
        <MudTable Class="mt4" Items="@currentEvaluationArea.AreaItems" Breakpoint="Breakpoint.None" Hover="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Area(@currentAreaIndex of @evaluationJson.Areas.Count) : @currentEvaluationArea.Name</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Area item</MudTh>
                <MudTh>Middle</MudTh>
                <MudTh>Point</MudTh>
                <MudTh>Comment</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Area item">@context.Name</MudTd>
                <MudTd DataLabel="Middle">@evaluationJson.MidEvaluationPoint</MudTd>
                <MudTd DataLabel="Point">@context.EvaluationPoint</MudTd>
                <MudTd DataLabel="Comment">@context.Comment</MudTd>
            </RowTemplate>
            <RowEditingTemplate>
                    <MudTd DataLabel="Area item">@context.Name</MudTd>
                    <MudTd DataLabel="Middle">@evaluationJson.MidEvaluationPoint</MudTd>
                    <MudTd DataLabel="Point">
                        <MudSelect @bind-Value="@context.EvaluationPoint" Required>
                            @foreach (var evaluationPoint in evaluationPointsTemplate.EvaluationPoints)
                                {
                                <MudSelectItem Value="@evaluationPoint.Name"></MudSelectItem>
                                }
                        </MudSelect>
                    </MudTd>
                    <MudTd DataLabel="Comment">
                        <MudTextField @bind-Value="@context.Comment"/>
                    </MudTd>
            </RowEditingTemplate>
        </MudTable>
        <MudItem Style="position: absolute; bottom: 0px; margin-bottom: 15px; right: 0;margin-right: 15px;">
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="PreviousPage">Previous Area</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="NextPage">Next Area</MudButton>
        </MudItem>
    </MudPaper>
}

