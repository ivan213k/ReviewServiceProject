@page "/evaluationpoints"

<Header Value="Evaluation points"></Header>
@if (_evaluationpoints == null)
{
    <Loading />
}
else
{
    <div class="content m-md-4">
        <div class="row">
            <div class="col-md-9">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="table-light">Name</th>
                            <th scope="col" class="table-light">Description</th>
                            <th>Actions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var points in _evaluationpoints)
                        {
                            <tr>
                                <td>il1</td>
                                <td>il1</td>
                                <td>
                                    <a href="#">Edit</a>
                                </td>
                                <td>
                                    <a href="#">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <Footer IsSecondaryButtonVisible="false" PrimaryButtonText="Add Evaluation" OnPrimaryButtonClicked="@OnAddEvaluationClicked"></Footer>

}