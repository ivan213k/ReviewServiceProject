@page "/importancelevels";

@if (_importanceLevels == null)
{
    <Loading></Loading>
}
else
{
<MudContainer MaxWidth="MaxWidth.False">
        <MudPaper Elevation="14" Class="px-4 mt-8 ml-8 mr-8">
            <EditForm Model="@_importanceLevel">
                <MudGrid>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Name" @bind-Value="@_importanceLevel.Name" For="@(() => _importanceLevel.Name)" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Description" @bind-Value="@_importanceLevel.Description" For="@(() => _importanceLevel.Description)" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Color" @bind-Value="@_importanceLevel.Color" For="@(() => _importanceLevel.Color)" />
                    </MudItem>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Outlined" Color="Color.Primary" Class="ml-auto mt-2 mb-2 mr-2" OnClick="AddRowClicked">AddRow</MudButton>
                </MudGrid>
            </EditForm>
        </MudPaper>
        <MudTable Items="@_importanceLevels" Hover="true" Breakpoint="Breakpoint.None" Class="px-4 mt-8 ml-8 mr-8" Elevation="14">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Color</MudTh>
                <MudTh>Action</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Description">@context.Description</MudTd>
                <MudTd DataLabel="Color">@context.Color</MudTd>
                <MudTd  DataLabel="Action">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Error" Class="ml-auto" OnClick="() => OnDeleteClicked(context)">Delete</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
</MudContainer>
<Footer OnPrimaryButtonClicked="@OnSaveClicked" OnSecondaryButtonClicked="@OnCancelClicked"></Footer>
<DeleteConfirmation @ref="@_deleteConfirmation" OnPrimaryButtonClicked="DeleteLevel"></DeleteConfirmation>

}

