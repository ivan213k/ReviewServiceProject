@inherits LayoutComponentBase
<AuthorizeView Roles="Administrator,Manager">
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                <HeaderPanel />
                <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => ClickLogOut())" />
            </MudAppBar>
            <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                <MudContainer Style="margin-bottom: 70px;">
                    @Body
                </MudContainer>
                <MudContainer Class="d-flex justify-end mt-10" MaxWidth="MaxWidth.False" Style="position: fixed; bottom: 0; left: 0; background-color: #f0f1ff;">
                    <FooterPanel />
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
               
            @Body
               
    </NotAuthorized>
</AuthorizeView>
<MudThemeProvider />
<MudDialogProvider MaxWidth="MaxWidth.ExtraSmall" CloseButton="true" />
<MudSnackbarProvider />

