@if (isLoaded)
{
    @ChildContent
}
else
{
    <MudContainer Style="position: fixed; top: 30%; left: 44%; color: #3F51B5 ">
        <MudProgressCircular Color="Color.Primary" Style="height:100px;width:100px;" Indeterminate="true" />
    </MudContainer>
}

@code {
    bool isLoaded;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(4000); // TODO actual initialization job
        isLoaded = true;
    }
}